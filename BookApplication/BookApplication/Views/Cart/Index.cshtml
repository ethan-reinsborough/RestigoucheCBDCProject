
@model IEnumerable<BookApplication.Models.Cart>

@{
    ViewBag.Title = "Cart";
}
<style>
    .blue {
        color: steelblue !important;
    }
</style>

<h2 class="blue">Your Cart</h2>
<br />


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.book.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.book.Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.book.PublicationDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.book.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.book.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.book.PublicationDate)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.ID })
            </td>
        </tr>
    }
</table>
