@model BookApplication.Models.Book
@using BookApplication.Models
@{
    ViewBag.Title = "Add to Cart";
}
<style>
    .red {
        color: red !important;
    }
</style>

<h2>Add to Cart</h2>

@using (Html.BeginForm("Add", "Books", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>Would you like to add this book to your cart?</h4>
        <div>
            <h4>Book</h4>
            <hr />
            <dl class="dl-horizontal">
                @Html.HiddenFor(model => model.Title)
                @Html.HiddenFor(model => model.ID)
                <dt>Book Cover</dt>
                <dd>
                    <img src="~/File?id=@Model.Cover.Last(f => f.FileType == FileType.BookCover).FileID"
                         alt="book cover" style="width:30%;" />
                </dd>


                <dt>
                    @Html.DisplayNameFor(model => model.Title)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Title)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Author)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Author)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.PublicationDate)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.PublicationDate)
                </dd>
            </dl>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add to Cart" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
